<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.bitshares.bitshareswallet.ImportActivty">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/import_activity_title"
            app:titleTextColor="@color/beige_color" />

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3sp"
                android:text="@string/login_description"
                android:textColor="#f6efcc"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/layoutAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    style="@style/EvrazTextHeaderViewStyle"
                    android:text="@string/account_name" />

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <WebView
                        android:id="@+id/webViewAvatarTo"
                        android:layout_width="44dp"
                        android:layout_height="0dp"
                        app:layout_constraintTop_toTopOf="@+id/editTextAccountName"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextAccountName"
                        />

                    <View
                        android:id="@+id/viewAvatarTo"
                        android:layout_width="44dp"
                        tools:visibility="gone"
                        android:background="@color/gray_color"
                        android:layout_height="44dp" />


                    <EditText
                        android:id="@+id/editTextAccountName"
                        style="@style/EvrazEditTextStyle"
                        android:layout_width="0dp"
                        android:layout_marginTop="0dp"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/webViewAvatarTo"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/textViewToId"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/editTextTo"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toStartOf="@+id/qrScan"
                        android:layout_toLeftOf="@+id/qrScan"
                        android:lines="1"
                        android:textColor="@color/beige_color"
                        android:textSize="@dimen/send_fragment_text_size"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="#10714822222" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFileBin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/label_file_path"
                    android:textSize="14sp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/editTextFilePath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:minLines="2" />

                    <TextView
                        android:id="@+id/buttonSelectFile"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_small_background"
                        android:gravity="center"
                        android:text="@string/label_select_file"
                        android:textColor="@android:color/white" />
                </FrameLayout>


            </LinearLayout>

            <TextView
                style="@style/EvrazTextHeaderViewStyle"
                android:layout_marginTop="36dp"
                android:text="@string/import_password" />


            <EditText
                android:id="@+id/editTextPassword"
                style="@style/EvrazEditTextStyle"
                android:inputType="textPassword" />

            <LinearLayout
                android:id="@+id/layoutPrivateKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:text="@string/label_private_key"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextPrivateKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:minLines="2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBrainKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="4dp"
                    android:text="Brain Key:"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editTextBrainKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:minLines="2" />
            </LinearLayout>


            <TextView
                android:id="@+id/textViewErrorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/buttonImport"
                style="@style/EvrazTextViewButton"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/btn_green_background"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/model_select_activity_title"
                android:textColor="@android:color/black" />


        </LinearLayout>

    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>